{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "target": "es5",
        "module": "commonjs", // 'UMD' removes the 'exports' not defined error
        "esModuleInterop": true,
	    "moduleResolution": "node",
	    "noImplicitAny": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "strictNullChecks": true
    },
    "include": ["../common/src", "./src", "./samples/*.json"]
}
